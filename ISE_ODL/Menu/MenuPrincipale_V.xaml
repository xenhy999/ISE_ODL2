<Window x:Class="ISE_ODL.MenuPrincipale_V"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:menu="clr-namespace:ISE_ODL.Menu"
        xmlns:odl="clr-namespace:ISE_ODL.Odl"
        xmlns:properties="clr-namespace:ISE_ODL.Properties"
        Closed="Window_Closed"
        d:DataContext="{d:DesignInstance Type=menu:MenuPrincipale_VM}"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        Title="ISE ODL Assistant" Height="550" Width="865" MinWidth="865" MinHeight="550"
        Background="{StaticResource Grigio_Chiaro}">
    <Window.Resources>
    <!--<data template... lista_VM allora lista V>0-->
        <DataTemplate DataType="{x:Type odl:Odl_VM}">
            <odl:OdlInElenco/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type odl:BaseOdl_VM}">
            <odl:OdlVuoto/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition />
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="{StaticResource Palette_2}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="{StaticResource White_Neutral}">
                <Image Source="{Binding Source={x:Static properties:Resources.logo_ise}}" Width="150" Height="100" VerticalAlignment="Center"/>
            </Border>
            <TextBlock Grid.Column="1" Text="ODL ASSISTANT" HorizontalAlignment="Center" FontSize="35" FontWeight="Bold" Foreground="{StaticResource Palette_4}" Background="{StaticResource Palette_2}" VerticalAlignment="Center"/>
        </Grid>
        
        <!-- DA qui in giù è uno UC -->
        <ContentControl Content="{Binding VistaCorrente}"/>

        <ListBox Grid.Row="1" Background="Transparent" BorderThickness="0" Style="{StaticResource Lista_Principale}" HorizontalAlignment="Stretch" ItemsSource="{Binding Commisioni}" SelectedItem="{Binding OdlSelezionata}"/>

        <Grid Grid.Row="2" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Style="{StaticResource Default}" Command="{Binding DefinisciOdl}">Definisci Odl</Button>
            <Button Grid.Column="1" Style="{StaticResource Default}" Command="{Binding EliminaOdl}">Elimina Odl</Button>
            <Button Grid.Column="2" Style="{StaticResource Default}" Command="{Binding ModificaOdl}" >Modifica Odl</Button>
            <CheckBox Grid.Column="3" Style="{StaticResource filtro_menu}"  Content="MostraCompletati" IsChecked="{Binding MostraCompletati}" Cursor="Hand"/>
        </Grid>
    </Grid>
</Window>



