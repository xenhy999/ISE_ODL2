<Window x:Class="ISE_ODL.MenuPrincipale_V"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISE_ODL"
        xmlns:menu="clr-namespace:ISE_ODL.Menu"
        xmlns:odl="clr-namespace:ISE_ODL.Odl"
        d:DataContext="{d:DesignInstance Type=menu:MenuPrincipale_VM}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type odl:Odl_VM}">
            <odl:OdlInElenco/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="3">
            <!--<DataGrid ItemsSource="{Binding Commisioni}" SelectedItem="{Binding OdlSelezionata}" Width="500" Height="300" FontSize="20" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="1*"/>
                    <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}" Width="1*"/>
                    <DataGridTextColumn Header="Note" Binding="{Binding Note}" Width="1*"/>
                    <DataGridTextColumn Header="Note" Binding="{Binding Orari}" Width="1*"/>
                </DataGrid.Columns>
            </DataGrid>-->
            <ListBox  ItemsSource="{Binding Commisioni}" SelectedItem="{Binding OdlSelezionata}" Width="800" Height="300" FontSize="20" HorizontalAlignment="Center">
            </ListBox>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="1">
            <Button Command="{Binding DefinisciOdl}"> Definisci Odl</Button>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="2">
            <Button Command="{Binding EliminaOdl}" >Elimina Odl</Button>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="0">
            <Button Command="{Binding ModificaOdl}" >Modifica Odl</Button>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="3">
            <Button Command="{Binding Esci}" Click="Button_Click"> Esci</Button>
        </StackPanel>
    </Grid>
</Window>



