<UserControl x:Class="ISE_ODL.Resoconto.Resoconto_V"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ISE_ODL.Resoconto"
             xmlns:giorno="clr-namespace:ISE_ODL.Resoconto.Giorno"
             d:DataContext="{d:DesignInstance Type=local:Resoconto_VM}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type giorno:Giorno_VM}">
            <giorno:Giorno_V/>
        </DataTemplate>
    </UserControl.Resources>
    <Grid >
        <ScrollViewer >
        <ListBox Style="{StaticResource Lista_Principale}" ItemsSource="{Binding ListaDeiGiorni}" Width="800" Background="{StaticResource Grigio_Chiaro}" BorderThickness="0" Height="Auto"></ListBox>
        </ScrollViewer>
    </Grid>
</UserControl>
